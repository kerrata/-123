<Window x:Class="MarmeladhubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarmeladhubApp"
        mc:Ignorable="d"
        Title="MarmeladHub: база данных мармеладок" Height="450" Width="800">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3B5998"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#8B9DC3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D8DFEA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D3D3D3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#F9F9F9"/>
            <Setter Property="AlternatingRowBackground" Value="#E9E9E9"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF983B61"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FFC3B0B0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="53"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox для выбора таблицы -->
        <ComboBox x:Name="TableSelector" 
                  Grid.Row="0" Margin="10,16,571,12"
                  SelectionChanged="TableSelector_SelectionChanged" Width="150" HorizontalAlignment="Left">
            <ComboBoxItem Content="Выберите таблицу" IsSelected="True" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBoxItem Content="Магазин" Tag="Магазин"/>
            <ComboBoxItem Content="Фабрика" Tag="Фабрика"/>
            <ComboBoxItem Content="Товар" Tag="Товар"/>

        </ComboBox>

        <!-- DataGrid для отображения данных -->
        <DataGrid x:Name="DataGrid" 
                  Grid.Row="1" Margin="10,10,10,79" 
                  AutoGenerateColumns="True" 
                  SelectionChanged="DataGrid_SelectionChanged" Grid.RowSpan="2" Foreground="Black" Background="White" BorderBrush="LightGray"/>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,50,0,50" Width="0"/>
        <Button x:Name="DeleteButton" Content="Удалить строку" 
                    IsEnabled="False" 
                    Click="DeleteButton_Click" Panel.ZIndex="-2" Margin="656,6,10,5" Background="#FF8C4333" Width="100" Height="30" HorizontalAlignment="Right"/>
        <Button x:Name="EditButton" Content="Изменить строку" 
                    IsEnabled="False" 
                    Click="EditButton_Click" Margin="488,6,158,5" Background="#FF776F7B" Width="100" Height="30" HorizontalAlignment="Right"/>
        <Button x:Name="AddButton" Content="Добавить строку" 
                    Click="AddButton_Click" Margin="320,6,328,5" Background="#FFA75A81" OpacityMask="Black" Width="100" Height="30" HorizontalAlignment="Right"/>
    </Grid>
</Window>
